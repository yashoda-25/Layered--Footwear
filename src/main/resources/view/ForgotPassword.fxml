<AnchorPane fx:id="Main" prefHeight="800.0" prefWidth="711.0" style="-fx-background-color: linear-gradient(to right bottom, #CFE5F2, #8dc1ff);" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse.footwear.controller.ForgotPasswordController">
   <children>
      <Label fx:id="lblResetPassword" layoutX="112.0" layoutY="71.0" text="Reset Password" textFill="#0d468c">
