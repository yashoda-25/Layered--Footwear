      </Label>
      <Label fx:id="lblConfirmNewPassword" layoutX="212.0" layoutY="451.0" text="Confirm New Password">
         <font>
            <Font name="Calibri" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="txtUsername" layoutX="212.0" layoutY="263.0" onAction="#txtUsernameOnAction" prefHeight="43.0" prefWidth="270.0" promptText="Username" style="-fx-background-color: #fff; -fx-border-color: blue; -fx-border-width: 0 0 1px 0;" />
