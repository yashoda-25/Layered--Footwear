      </ImageView>
      <ImageView fitHeight="23.0" fitWidth="25.0" layoutX="186.0" layoutY="495.0">
         <image>
            <Image url="@../images/icons8-lock-32.png" />
         </image>
      </ImageView>
      <Label fx:id="lblCancel" layoutX="428.0" layoutY="595.0" onMouseClicked="#onClickedCancel" text="Cancel">
         <font>
            <Font name="Calibri" size="20.0" />
         </font>
      </Label>
